<button onclick={{toggle-action 'showSettings' this}}>
  {{#if showSettings}}
    Done
  {{else}}
    Settings
  {{/if}}
</button>

{{#if showSettings}}
  <div local-class="slider">
    {{ui-slider min='1' max=messages.length value=(mut count)}}
  </div>
{{/if}}

<div local-class="content">
  {{#each filteredMessages as |message|}}
    {{slack-message message=message}}
  {{/each}}
</div>
